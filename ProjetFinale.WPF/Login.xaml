<Window x:Class="ProjetFinale.Views.LoginWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:sys="clr-namespace:System;assembly=mscorlib"
        Title="Profil Utilisateur"
        Height="900"
        Width="700"
        WindowStartupLocation="CenterScreen"
        ResizeMode="NoResize">

    <!-- Conteneur principal -->
    <Grid Background="{StaticResource BackgroundGradientStyle}">
        <ScrollViewer VerticalScrollBarVisibility="Auto" HorizontalScrollBarVisibility="Disabled">
            <Grid Style="{StaticResource LoginFormContainerStyle}">
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="*"/>
                </Grid.RowDefinitions>

                <!-- Header -->
                <StackPanel Grid.Row="0" Style="{StaticResource LoginHeaderStyle}">
                    <TextBlock Text="CRÉER VOTRE PROFIL" Style="{StaticResource LoginTitleStyle}"/>
                    <Rectangle Style="{StaticResource LoginTitleUnderlineStyle}"/>
                </StackPanel>

                <!-- Formulaire -->
                <Grid Grid.Row="1">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="20"/>
                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                    </Grid.RowDefinitions>

                    <!-- Pseudo -->
                    <StackPanel Grid.Row="0" Grid.Column="0" Grid.ColumnSpan="3" Style="{StaticResource LoginFieldStyle}">
                        <TextBlock Text="PSEUDO" Style="{StaticResource LoginLabelStyle}"/>
                        <TextBox x:Name="PseudoTextBox" Style="{StaticResource LoginTextBoxStyle}" Tag="Entrez votre pseudo"/>
                    </StackPanel>

                    <!-- Nom -->
                    <StackPanel Grid.Row="1" Grid.Column="0" Style="{StaticResource LoginFieldStyle}">
                        <TextBlock Text="NOM" Style="{StaticResource LoginLabelStyle}"/>
                        <TextBox x:Name="NomTextBox" Style="{StaticResource LoginTextBoxStyle}" Tag="Entrez votre nom"/>
                    </StackPanel>

                    <!-- Taille -->
                    <StackPanel Grid.Row="2" Grid.Column="0" Style="{StaticResource LoginFieldStyle}">
                        <TextBlock Text="TAILLE (cm)" Style="{StaticResource LoginLabelStyle}"/>
                        <TextBox x:Name="TailleTextBox" Style="{StaticResource LoginTextBoxStyle}" Tag="Ex: 175"/>
                    </StackPanel>

                    <!-- Âge -->
                    <StackPanel Grid.Row="3" Grid.Column="0" Style="{StaticResource LoginFieldStyle}">
                        <TextBlock Text="ÂGE" Style="{StaticResource LoginLabelStyle}"/>
                        <TextBox x:Name="AgeTextBox" Style="{StaticResource LoginTextBoxStyle}" Tag="Ex: 25"/>
                    </StackPanel>

                    <!-- Email -->
                    <StackPanel Grid.Row="4" Grid.Column="0" Style="{StaticResource LoginFieldStyle}">
                        <TextBlock Text="EMAIL" Style="{StaticResource LoginLabelStyle}"/>
                        <TextBox x:Name="EmailTextBox" Style="{StaticResource LoginTextBoxStyle}" Tag="votre@email.com"/>
                    </StackPanel>

                    <!-- Prénom -->
                    <StackPanel Grid.Row="1" Grid.Column="2" Style="{StaticResource LoginFieldStyle}">
                        <TextBlock Text="PRÉNOM" Style="{StaticResource LoginLabelStyle}"/>
                        <TextBox x:Name="PrenomTextBox" Style="{StaticResource LoginTextBoxStyle}" Tag="Entrez votre prénom"/>
                    </StackPanel>

                    <!-- Poids actuel -->
                    <StackPanel Grid.Row="2" Grid.Column="2" Style="{StaticResource LoginFieldStyle}">
                        <TextBlock Text="POIDS ACTUEL (kg)" Style="{StaticResource LoginLabelStyle}"/>
                        <TextBox x:Name="PoidsTextBox" Style="{StaticResource LoginTextBoxStyle}" Tag="Ex: 70"/>
                    </StackPanel>

                    <!-- Objectif poids -->
                    <StackPanel Grid.Row="3" Grid.Column="2" Style="{StaticResource LoginFieldStyle}">
                        <TextBlock Text="OBJECTIF POIDS (kg)" Style="{StaticResource LoginLabelStyle}"/>
                        <TextBox x:Name="ObjectifPoidsTextBox" Style="{StaticResource LoginTextBoxStyle}" Tag="Ex: 65"/>
                    </StackPanel>

                    <!-- Date objectif -->
                    <StackPanel Grid.Row="4" Grid.Column="2" Style="{StaticResource LoginFieldStyle}">
                        <TextBlock Text="DATE OBJECTIF" Style="{StaticResource LoginLabelStyle}"/>
                        <DatePicker x:Name="DateObjectifPicker" Style="{StaticResource LoginDatePickerStyle}"/>
                    </StackPanel>

                    <!-- Mot de passe -->
                    <StackPanel Grid.Row="5" Grid.Column="0" Grid.ColumnSpan="3" Style="{StaticResource LoginFieldStyle}">
                        <TextBlock Text="MOT DE PASSE" Style="{StaticResource LoginLabelStyle}"/>
                        <PasswordBox x:Name="MotDePasseBox" Style="{StaticResource LoginPasswordBoxStyle}"/>
                    </StackPanel>

                    <!-- Confirmation -->
                    <StackPanel Grid.Row="6" Grid.Column="0" Grid.ColumnSpan="3" Style="{StaticResource LoginFieldPasswordStyle}">
                        <TextBlock Text="CONFIRMER MOT DE PASSE" Style="{StaticResource LoginLabelStyle}"/>
                        <PasswordBox x:Name="ConfirmMotDePasseBox" Style="{StaticResource LoginPasswordBoxStyle}"/>
                    </StackPanel>

                    <!-- Bouton -->
                    <Button Grid.Row="7" Grid.Column="0" Grid.ColumnSpan="3"
                            Content="CRÉER MON PROFIL"
                            Style="{StaticResource LoginButtonStyle}"
                            Click="CreerProfil_Click"/>
                </Grid>
            </Grid>
        </ScrollViewer>
    </Grid>
</Window>