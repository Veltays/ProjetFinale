<Page x:Class="ProjetFinale.WPF.ExportsPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      Title="Exports"
      Background="#303030">

    <Page.Resources>
        <!-- Styles spécifiques à la page Export -->
        <Style x:Key="ExportCardStyle" TargetType="Border">
            <Setter Property="Background" Value="#2A2A2A"/>
            <Setter Property="CornerRadius" Value="10"/>
            <Setter Property="Padding" Value="20"/>
            <Setter Property="Margin" Value="0,0,10,20"/>
        </Style>

        <Style x:Key="ExportTitleStyle" TargetType="TextBlock">
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="FontSize" Value="18"/>
            <Setter Property="FontWeight" Value="Bold"/>
            <Setter Property="Margin" Value="0,0,0,10"/>
        </Style>

        <Style x:Key="ExportDescriptionStyle" TargetType="TextBlock">
            <Setter Property="Foreground" Value="#B8B8B8"/>
            <Setter Property="FontSize" Value="12"/>
            <Setter Property="TextWrapping" Value="Wrap"/>
            <Setter Property="Margin" Value="0,0,0,12"/>
        </Style>

        <Style x:Key="ExportInfoStyle" TargetType="TextBlock">
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="FontSize" Value="12"/>
            <Setter Property="Margin" Value="0,0,0,5"/>
        </Style>

        <Style x:Key="ExportInfoLabelStyle" TargetType="TextBlock">
            <Setter Property="Foreground" Value="#A8A8A8"/>
            <Setter Property="FontSize" Value="12"/>
        </Style>

        <Style x:Key="ExportButtonStyle" TargetType="Button">
            <Setter Property="Background" Value="#AF66FF"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Height" Value="40"/>
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="FontWeight" Value="Bold"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}"
                                CornerRadius="5">
                            <ContentPresenter HorizontalAlignment="Center"
                                            VerticalAlignment="Center"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter Property="Background" Value="#B974FF"/>
                            </Trigger>
                            <Trigger Property="IsPressed" Value="True">
                                <Setter Property="Background" Value="#9C4DCC"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <Style x:Key="ExportIconStyle" TargetType="Border">
            <Setter Property="Width" Value="40"/>
            <Setter Property="Height" Value="40"/>
            <Setter Property="CornerRadius" Value="5"/>
            <Setter Property="Margin" Value="0,0,15,0"/>
        </Style>

        <Style x:Key="ExportAllCardStyle" TargetType="Border">
            <Setter Property="Background" Value="#2A2A2A"/>
            <Setter Property="CornerRadius" Value="10"/>
            <Setter Property="Padding" Value="30"/>
            <Setter Property="HorizontalAlignment" Value="Center"/>
            <Setter Property="MaxWidth" Value="500"/>
        </Style>
    </Page.Resources>

    <ScrollViewer Margin="20" VerticalScrollBarVisibility="Auto">
        <StackPanel>

            <!-- Titre principal -->
            <TextBlock Text="EXPORTS" 
                       Foreground="White"
                       FontSize="32" 
                       FontWeight="Bold"
                       Margin="0,0,0,20"/>

            <!-- Section formats d'export -->
            <TextBlock Text="FORMATS D'EXPORT DISPONIBLES" 
                       Foreground="#D393FF"
                       FontSize="20" 
                       FontWeight="Bold"
                       Margin="0,0,0,20"/>

            <!-- Grille des exports -->
            <UniformGrid Columns="3" Rows="1" Margin="0,0,0,10">

                <!-- Carte CSV -->
                <Border Style="{StaticResource ExportCardStyle}">
                    <StackPanel>
                        <!-- Header avec icône -->
                        <StackPanel Orientation="Horizontal" Margin="0,0,0,15">
                            <Border Style="{StaticResource ExportIconStyle}" 
                                    Background="#059669">
                                <TextBlock Text="📋" 
                                           FontSize="20" 
                                           HorizontalAlignment="Center" 
                                           VerticalAlignment="Center"/>
                            </Border>
                            <TextBlock Text="CSV (.csv)" 
                                       Style="{StaticResource ExportTitleStyle}"
                                       VerticalAlignment="Center"
                                       Margin="0"/>
                        </StackPanel>

                        <!-- Description -->
                        <TextBlock Text="Format de données séparées par des virgules. Compatible avec Excel, Google Sheets et la plupart des outils d'analyse."
                                   Style="{StaticResource ExportDescriptionStyle}"/>

                        <!-- Informations -->
                        <StackPanel Margin="0,0,0,15">
                            <StackPanel Orientation="Horizontal">
                                <TextBlock Text="TAILLE: " Style="{StaticResource ExportInfoLabelStyle}"/>
                                <TextBlock Text="~850 KB" Style="{StaticResource ExportInfoStyle}"/>
                            </StackPanel>
                        </StackPanel>

                        <!-- Bouton -->
                        <Button Content="EXPORTER EN CSV" 
                                Style="{StaticResource ExportButtonStyle}"
                                Click="ExportCSV_Click"/>
                    </StackPanel>
                </Border>

                <!-- Carte JSON -->
                <Border Style="{StaticResource ExportCardStyle}">
                    <StackPanel>
                        <!-- Header avec icône -->
                        <StackPanel Orientation="Horizontal" Margin="0,0,0,15">
                            <Border Style="{StaticResource ExportIconStyle}" 
                                    Background="#D97706">
                                <TextBlock Text="" 
                                           FontSize="16" 
                                           FontWeight="Bold"
                                           HorizontalAlignment="Center" 
                                           VerticalAlignment="Center"
                                           Foreground="White"/>
                            </Border>
                            <TextBlock Text="JSON (.json)" 
                                       Style="{StaticResource ExportTitleStyle}"
                                       VerticalAlignment="Center"
                                       Margin="0"/>
                        </StackPanel>

                        <!-- Description -->
                        <TextBlock Text="Format universel pour l'intégration avec d'autres applications ou pour les développeurs."
                                   Style="{StaticResource ExportDescriptionStyle}"/>

                        <!-- Informations -->
                        <StackPanel Margin="0,0,0,20">
                            <StackPanel Orientation="Horizontal">
                                <TextBlock Text="TAILLE: " Style="{StaticResource ExportInfoLabelStyle}"/>
                                <TextBlock Text="~1.8 MB" Style="{StaticResource ExportInfoStyle}"/>
                            </StackPanel>
                        </StackPanel>

                        <!-- Bouton -->
                        <Button Content="EXPORTER EN JSON" 
                                Style="{StaticResource ExportButtonStyle}"
                                Click="ExportJSON_Click"/>
                    </StackPanel>
                </Border>

                <!-- Carte SERIALIZE -->
                <Border Style="{StaticResource ExportCardStyle}">
                    <StackPanel>
                        <!-- Header avec icône -->
                        <StackPanel Orientation="Horizontal" Margin="0,0,0,15">
                            <Border Style="{StaticResource ExportIconStyle}" 
                                    Background="#1E40AF">
                                <TextBlock Text="💾" 
                                           FontSize="20" 
                                           HorizontalAlignment="Center" 
                                           VerticalAlignment="Center"/>
                            </Border>
                            <TextBlock Text="SERIALIZE (.dat)" 
                                       Style="{StaticResource ExportTitleStyle}"
                                       VerticalAlignment="Center"
                                       Margin="0"/>
                        </StackPanel>

                        <!-- Description -->
                        <TextBlock Text="Format binaire optimisé pour la sauvegarde et restauration rapide de toutes vos données."
                                   Style="{StaticResource ExportDescriptionStyle}"/>

                        <!-- Informations -->
                        <StackPanel Margin="0,0,0,20">
                            <StackPanel Orientation="Horizontal">
                                <TextBlock Text="TAILLE: " Style="{StaticResource ExportInfoLabelStyle}"/>
                                <TextBlock Text="~900 KB" Style="{StaticResource ExportInfoStyle}"/>
                            </StackPanel>
                        </StackPanel>

                        <!-- Bouton -->
                        <Button Content="EXPORTER EN BINAIRE" 
                                Style="{StaticResource ExportButtonStyle}"
                                Click="ExportSerialize_Click"/>
                    </StackPanel>
                </Border>
            </UniformGrid>

            <!-- Section export complet -->
            <TextBlock Text="EXPORT COMPLET" 
                       Foreground="#D393FF"
                       FontSize="20" 
                       FontWeight="Bold"
                       Margin="0,5,0,10"/>

            <Border Style="{StaticResource ExportAllCardStyle}">
                <StackPanel HorizontalAlignment="Center">
                    <TextBlock Text="EXPORTER TOUT" 
                               Foreground="#B974FF"
                               FontSize="22" 
                               FontWeight="Bold"
                               HorizontalAlignment="Center"
                               Margin="0,0,0,10"/>

                    <TextBlock Text="Téléchargez toutes vos données dans tous les formats disponibles en une seule fois"
                               Style="{StaticResource ExportDescriptionStyle}"
                               HorizontalAlignment="Center"
                               TextAlignment="Center"
                               Margin="0,0,0,25"/>

                    <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
                        <Button Content="EXPORTER TOUT (.zip)" 
                                Style="{StaticResource ExportButtonStyle}"
                                Width="200"
                                Margin="0,0,15,0"
                                Click="ExportAll_Click"/>

                        <Button Content="PROGRAMMER EXPORT" 
                                Style="{StaticResource ExportButtonStyle}"
                                Width="200"
                                Background="#6366F1"
                                Click="ScheduleExport_Click"/>
                    </StackPanel>
                </StackPanel>
            </Border>
        </StackPanel>
    </ScrollViewer>
</Page>