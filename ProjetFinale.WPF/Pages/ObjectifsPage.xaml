<Page x:Class="ProjetFinale.WPF.ObjectifPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      Title="ObjectifsPage"
      Background="{DynamicResource App.Background}">

    <ScrollViewer Margin="20" VerticalScrollBarVisibility="Auto">
        <StackPanel>

            <!-- Titre -->
            <TextBlock Text="TASK"
                       FontFamily="Kameron"
                       FontSize="42"
                       FontWeight="Bold"
                       Margin="0,0,0,30"
                       HorizontalAlignment="Left"
                       Foreground="{StaticResource Obj.Brush.TitleGradient}"/>

            <!-- Ajout de tâche -->
            <Border Background="{StaticResource Obj.Brush.Surface1}"
                    CornerRadius="15"
                    Padding="30"
                    Margin="0,0,0,30"
                    Effect="{StaticResource Obj.Effect.CardStrong}">
                <StackPanel>
                    <TextBlock Text="➕ AJOUTER UNE NOUVELLE TÂCHE"
                               Foreground="{StaticResource Obj.Brush.AccentLight}"
                               FontFamily="Kameron"
                               FontSize="20"
                               FontWeight="Bold"
                               Margin="0,0,0,25"/>
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="15"/>
                            <ColumnDefinition Width="Auto"/>
                        </Grid.ColumnDefinitions>

                        <TextBox x:Name="NouvelleTacheTextBox"
                                 Grid.Column="0"
                                 Style="{StaticResource Obj.TaskTextBox}"
                                 Text="ENTREZ UNE TACHE...."
                                 GotFocus="TextBox_GotFocus"
                                 KeyDown="NouvelleTacheTextBox_KeyDown"/>

                        <!-- Bouton AJOUTER -->
                        <Button Grid.Column="2"
                                Content="AJOUTER"
                                Style="{StaticResource Obj.AddTaskButton}"
                                Click="AjouterTacheButton_Click"/>
                    </Grid>
                </StackPanel>
            </Border>

            <!-- Séparateur -->
            <Rectangle Style="{StaticResource Obj.Separator}"/>

            <!-- Liste des tâches -->
            <StackPanel>
                <TextBlock Text="📋 MES TÂCHES"
                           Foreground="{StaticResource Obj.Brush.AccentLight}"
                           FontFamily="Kameron"
                           FontSize="24"
                           FontWeight="Bold"
                           Margin="0,0,0,25"/>

                <ItemsControl ItemsSource="{Binding ListeTaches}">
                    <ItemsControl.ItemTemplate>
                        <DataTemplate>
                            <Border Background="{StaticResource Obj.Brush.Surface1}"
                                    CornerRadius="12"
                                    Padding="20"
                                    Margin="0,0,0,15"
                                    Effect="{StaticResource Obj.Effect.Card}">
                                <Grid>
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="Auto"/>
                                        <ColumnDefinition Width="*"/>
                                        <ColumnDefinition Width="Auto"/>
                                    </Grid.ColumnDefinitions>

                                    <!-- Checkbox -->
                                    <CheckBox Grid.Column="0"
                                              Width="28"
                                              Height="28"
                                              Margin="0,0,15,0"
                                              VerticalAlignment="Center"
                                              IsChecked="{Binding EstTerminee, Mode=TwoWay}"
                                              Style="{StaticResource Obj.TaskCheckBox}"
                                              Checked="TacheCheckBox_Changed"
                                              Unchecked="TacheCheckBox_Changed"/>

                                    <!-- Description -->
                                    <TextBlock Grid.Column="1"
                                               Text="{Binding Description}"
                                               FontFamily="Kameron"
                                               FontSize="16"
                                               FontWeight="Medium"
                                               VerticalAlignment="Center"
                                               TextWrapping="Wrap"
                                               Margin="0,0,10,0">
                                        <TextBlock.Style>
                                            <Style TargetType="TextBlock">
                                                <!-- CHANGÉ : on pointe le brush de texte -->
                                                <Setter Property="Foreground" Value="{DynamicResource Obj.Brush.TextPrimary}"/>
                                                <Style.Triggers>
                                                    <DataTrigger Binding="{Binding EstTerminee}" Value="True">
                                                        <!-- CHANGÉ : gris “muted” du thème -->
                                                        <Setter Property="Foreground" Value="{DynamicResource Obj.Brush.TextMuted}"/>
                                                        <Setter Property="TextDecorations" Value="Strikethrough"/>
                                                        <Setter Property="Opacity" Value="0.7"/>
                                                    </DataTrigger>
                                                </Style.Triggers>
                                            </Style>
                                        </TextBlock.Style>
                                    </TextBlock>

                                    <!-- Bouton supprimer -->
                                    <Button Grid.Column="2"
                                            Style="{StaticResource Obj.IconButton.Delete}"
                                            Click="SupprimerTache_Click"
                                            Tag="{Binding}"/>
                                </Grid>
                            </Border>
                        </DataTemplate>
                    </ItemsControl.ItemTemplate>

                    <ItemsControl.ItemsPanel>
                        <ItemsPanelTemplate>
                            <StackPanel/>
                        </ItemsPanelTemplate>
                    </ItemsControl.ItemsPanel>
                </ItemsControl>

                <!-- Empty state -->
                <Border Background="{StaticResource Obj.Brush.Surface1}"
                        CornerRadius="15"
                        Padding="40"
                        HorizontalAlignment="Center"
                        Margin="0,20"
                        Style="{StaticResource Obj.EmptyStateBorder}"
                        Effect="{StaticResource Obj.Effect.Empty}">
                    <StackPanel HorizontalAlignment="Center">
                        <TextBlock Text="📝"
                                   FontSize="64"
                                   HorizontalAlignment="Center"
                                   Margin="0,0,0,20"
                                   Opacity="0.6"/>
                        <TextBlock Text="Aucune tâche pour le moment"
                                   Foreground="{StaticResource Obj.Brush.TextMuted}"
                                   FontFamily="Kameron"
                                   FontSize="20"
                                   FontWeight="Bold"
                                   HorizontalAlignment="Center"
                                   Margin="0,0,0,10"/>
                        <TextBlock Text="Ajoutez votre première tâche ci-dessus pour commencer ! 🚀"
                                   Foreground="{StaticResource Obj.Brush.TextSubtle}"
                                   FontFamily="Kameron"
                                   FontSize="14"
                                   HorizontalAlignment="Center"
                                   TextAlignment="Center"/>
                    </StackPanel>
                </Border>
            </StackPanel>
        </StackPanel>
    </ScrollViewer>
</Page>