<Page x:Class="ProjetFinale.WPF.ObjectifPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:sys="clr-namespace:System;assembly=mscorlib"
      Title="ObjectifsPage" 
      Background="#303030">

    <Page.Resources>
        <!-- Converter pour la visibilité -->
        <BooleanToVisibilityConverter x:Key="BooleanToVisibilityConverter"/>

        <!-- Styles conservés -->
        <Style x:Key="AddTaskButtonStyle" TargetType="Button">
            <Setter Property="Background" Value="#AF66FF"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="FontSize" Value="16"/>
            <Setter Property="Height" Value="50"/>
            <Setter Property="MinWidth" Value="120"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}" 
                                CornerRadius="10"
                                Padding="20,10">
                            <ContentPresenter HorizontalAlignment="Center" 
                                            VerticalAlignment="Center"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter Property="Background" Value="#D393FF"/>
                            </Trigger>
                            <Trigger Property="IsPressed" Value="True">
                                <Setter Property="Background" Value="#9B4FD8"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <Style x:Key="TaskTextBoxStyle" TargetType="TextBox">
            <Setter Property="Background" Value="#3A3A3A"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="BorderBrush" Value="#AF66FF"/>
            <Setter Property="BorderThickness" Value="2"/>
            <Setter Property="FontSize" Value="16"/>
            <Setter Property="Padding" Value="15"/>
            <Setter Property="Height" Value="50"/>
            <Setter Property="VerticalContentAlignment" Value="Center"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="TextBox">
                        <Border Background="{TemplateBinding Background}"
                                BorderBrush="{TemplateBinding BorderBrush}"
                                BorderThickness="{TemplateBinding BorderThickness}"
                                CornerRadius="10">
                            <ScrollViewer x:Name="PART_ContentHost"
                                        Margin="{TemplateBinding Padding}"
                                        VerticalAlignment="{TemplateBinding VerticalContentAlignment}"/>
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <!-- NOUVEAU : DataTemplate pour les tâches -->
        <DataTemplate x:Key="TacheItemTemplate">
            <Border Background="#2A2A2A"
                    CornerRadius="10"
                    Padding="20"
                    Margin="0,0,0,15">
                <Border.Effect>
                    <DropShadowEffect Color="Black" BlurRadius="8" ShadowDepth="2" Opacity="0.3"/>
                </Border.Effect>

                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="Auto"/>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="Auto"/>
                    </Grid.ColumnDefinitions>

                    <!-- BINDING: Checkbox avec l'état de la tâche -->
                    <CheckBox Grid.Column="0"
                             IsChecked="{Binding EstTerminee, Mode=TwoWay}"
                             Width="25"
                             Height="25"
                             Margin="0,0,15,0"
                             VerticalAlignment="Center"
                             Checked="TacheCheckBox_Changed"
                             Unchecked="TacheCheckBox_Changed">
                        <CheckBox.Style>
                            <Style TargetType="CheckBox">
                                <Setter Property="Template">
                                    <Setter.Value>
                                        <ControlTemplate TargetType="CheckBox">
                                            <Border Background="#4A4A4A"
                                                    BorderBrush="#AF66FF"
                                                    BorderThickness="2"
                                                    CornerRadius="5"
                                                    Width="25"
                                                    Height="25">
                                                <TextBlock Text="✓"
                                                          Foreground="White"
                                                          FontSize="16"
                                                          FontWeight="Bold"
                                                          HorizontalAlignment="Center"
                                                          VerticalAlignment="Center"
                                                          Visibility="{Binding IsChecked, RelativeSource={RelativeSource TemplatedParent}, Converter={StaticResource BooleanToVisibilityConverter}}"/>
                                            </Border>
                                        </ControlTemplate>
                                    </Setter.Value>
                                </Setter>
                            </Style>
                        </CheckBox.Style>
                    </CheckBox>

                    <!-- BINDING: Description de la tâche avec style conditionnel -->
                    <TextBlock Grid.Column="1"
                              Text="{Binding Description}"
                              FontSize="16"
                              FontWeight="Bold"
                              VerticalAlignment="Center"
                              TextWrapping="Wrap">
                        <TextBlock.Style>
                            <Style TargetType="TextBlock">
                                <Setter Property="Foreground" Value="White"/>
                                <Style.Triggers>
                                    <DataTrigger Binding="{Binding EstTerminee}" Value="True">
                                        <Setter Property="Foreground" Value="#888888"/>
                                        <Setter Property="TextDecorations" Value="Strikethrough"/>
                                    </DataTrigger>
                                </Style.Triggers>
                            </Style>
                        </TextBlock.Style>
                    </TextBlock>

                    <!-- Bouton supprimer -->
                    <Button Grid.Column="2"
                           Click="SupprimerTache_Click"
                           Tag="{Binding}"
                           Background="Transparent"
                           BorderThickness="0"
                           Width="30"
                           Height="30"
                           Cursor="Hand">
                        <Button.Template>
                            <ControlTemplate TargetType="Button">
                                <Border Background="{TemplateBinding Background}"
                                        CornerRadius="15">
                                    <TextBlock Text="✕" 
                                              FontSize="16" 
                                              FontWeight="Bold"
                                              Foreground="#FF4444"
                                              HorizontalAlignment="Center"
                                              VerticalAlignment="Center"/>
                                </Border>
                                <ControlTemplate.Triggers>
                                    <Trigger Property="IsMouseOver" Value="True">
                                        <Setter Property="Background" Value="#33FF0000"/>
                                    </Trigger>
                                    <Trigger Property="IsPressed" Value="True">
                                        <Setter Property="Background" Value="#55FF0000"/>
                                    </Trigger>
                                </ControlTemplate.Triggers>
                            </ControlTemplate>
                        </Button.Template>
                    </Button>
                </Grid>
            </Border>
        </DataTemplate>

        <Style x:Key="SeparatorStyle" TargetType="Rectangle">
            <Setter Property="Fill" Value="#AF66FF"/>
            <Setter Property="Height" Value="2"/>
            <Setter Property="Margin" Value="0,0,0,30"/>
            <Setter Property="RadiusX" Value="1"/>
            <Setter Property="RadiusY" Value="1"/>
        </Style>
    </Page.Resources>

    <ScrollViewer Margin="20" VerticalScrollBarVisibility="Auto">
        <StackPanel>
            <!-- Titre de la page -->
            <TextBlock Text="TASK"
                       FontSize="36"
                       Foreground="White"
                       FontWeight="Bold"
                       Margin="0,0,0,30"/>

            <!-- Section d'ajout de tâche -->
            <Border Background="#2A2A2A"
                    CornerRadius="15"
                    Padding="25"
                    Margin="0,0,0,30">
                <Border.Effect>
                    <DropShadowEffect Color="Black" BlurRadius="8" ShadowDepth="3" Opacity="0.3"/>
                </Border.Effect>

                <StackPanel>
                    <TextBlock Text="AJOUTER UNE NOUVELLE TÂCHE"
                               Foreground="#D393FF"
                               FontSize="18"
                               FontWeight="Bold"
                               Margin="0,0,0,20"/>

                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="Auto"/>
                        </Grid.ColumnDefinitions>

                        <TextBox x:Name="NouvelleTacheTextBox"
                                Grid.Column="0"
                                Style="{StaticResource TaskTextBoxStyle}"
                                Text="ENTREZ UNE TACHE...."
                                Margin="0,0,15,0"
                                GotFocus="TextBox_GotFocus"
                                KeyDown="NouvelleTacheTextBox_KeyDown"/>

                        <Button Grid.Column="1"
                               Content="AJOUTER"
                               Style="{StaticResource AddTaskButtonStyle}"
                               Click="AjouterTacheButton_Click"/>
                    </Grid>
                </StackPanel>
            </Border>

            <!-- Séparateur -->
            <Rectangle Style="{StaticResource SeparatorStyle}"/>

            <!-- Section des tâches -->
            <StackPanel>
                <TextBlock Text="MES TÂCHES"
                           Foreground="#D393FF"
                           FontSize="20"
                           FontWeight="Bold"
                           Margin="0,0,0,20"/>

                <!-- 🔥 NOUVEAU : ItemsControl avec binding sur ListeTaches -->
                <ItemsControl ItemsSource="{Binding ListeTaches}"
                             ItemTemplate="{StaticResource TacheItemTemplate}">
                    <!-- Pas de panel spécial, utilise le StackPanel par défaut -->
                </ItemsControl>

                <!-- 🔥 CORRIGÉ : Message quand aucune tâche (UNE SEULE définition Style) -->
                <Border Background="#2A2A2A"
                        CornerRadius="10"
                        Padding="30"
                        HorizontalAlignment="Center"
                        Margin="0,20">
                    <Border.Style>
                        <Style TargetType="Border">
                            <Setter Property="Visibility" Value="Collapsed"/>
                            <Style.Triggers>
                                <DataTrigger Binding="{Binding ListeTaches.Count}" Value="0">
                                    <Setter Property="Visibility" Value="Visible"/>
                                </DataTrigger>
                            </Style.Triggers>
                        </Style>
                    </Border.Style>

                    <StackPanel HorizontalAlignment="Center">
                        <TextBlock Text="📝"
                                  FontSize="48"
                                  HorizontalAlignment="Center"
                                  Margin="0,0,0,15"/>
                        <TextBlock Text="Aucune tâche pour le moment"
                                  Foreground="#888888"
                                  FontSize="18"
                                  FontWeight="Bold"
                                  HorizontalAlignment="Center"
                                  Margin="0,0,0,5"/>
                        <TextBlock Text="Ajoutez votre première tâche ci-dessus !"
                                  Foreground="#666666"
                                  FontSize="14"
                                  HorizontalAlignment="Center"/>
                    </StackPanel>
                </Border>
            </StackPanel>
        </StackPanel>
    </ScrollViewer>
</Page>