<Page x:Class="ProjetFinale.WPF.AccueilPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      Title="AccueilPage" 
      Background="#303030">

    <Page.Resources>
        <!-- Styles existants conservés -->
        <Style x:Key="WelcomeCardStyle" TargetType="Border">
            <Setter Property="Background" Value="#2A2A2A"/>
            <Setter Property="CornerRadius" Value="15"/>
            <Setter Property="Padding" Value="30"/>
            <Setter Property="Margin" Value="0,0,0,20"/>
            <Setter Property="Effect">
                <Setter.Value>
                    <DropShadowEffect Color="Black" BlurRadius="8" ShadowDepth="3" Opacity="0.3"/>
                </Setter.Value>
            </Setter>
        </Style>

        <Style x:Key="ProfileCardStyle" TargetType="Border">
            <Setter Property="Background" Value="#2A2A2A"/>
            <Setter Property="CornerRadius" Value="12"/>
            <Setter Property="Padding" Value="25"/>
            <Setter Property="Margin" Value="0,0,10,0"/>
            <Setter Property="Effect">
                <Setter.Value>
                    <DropShadowEffect Color="Black" BlurRadius="8" ShadowDepth="3" Opacity="0.3"/>
                </Setter.Value>
            </Setter>
        </Style>

        <Style x:Key="StatCardStyle" TargetType="Border">
            <Setter Property="Background" Value="#2A2A2A"/>
            <Setter Property="CornerRadius" Value="12"/>
            <Setter Property="Padding" Value="20"/>
            <Setter Property="Effect">
                <Setter.Value>
                    <DropShadowEffect Color="Black" BlurRadius="8" ShadowDepth="3" Opacity="0.3"/>
                </Setter.Value>
            </Setter>
        </Style>

        <Style x:Key="QuickActionButtonStyle" TargetType="Button">
            <Setter Property="Background" Value="#AF66FF"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="FontFamily" Value="{StaticResource KameronBold}"/>
            <Setter Property="FontSize" Value="12"/>
            <Setter Property="Height" Value="60"/>
            <Setter Property="Margin" Value="5"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}" 
                                CornerRadius="8"
                                Padding="15,10">
                            <ContentPresenter HorizontalAlignment="Center" 
                                            VerticalAlignment="Center"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter Property="Background" Value="#D393FF"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <!-- 🆕 Style pour les TextBox éditables -->
        <Style x:Key="EditableTextBoxStyle" TargetType="TextBox">
            <Setter Property="Background" Value="#404040"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="BorderBrush" Value="#AF66FF"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="Padding" Value="8,5"/>
            <Setter Property="FontWeight" Value="Bold"/>
            <Setter Property="FontSize" Value="12"/>
            <Setter Property="HorizontalAlignment" Value="Stretch"/>
            <Setter Property="VerticalContentAlignment" Value="Center"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="TextBox">
                        <Border Background="{TemplateBinding Background}"
                                BorderBrush="{TemplateBinding BorderBrush}"
                                BorderThickness="{TemplateBinding BorderThickness}"
                                CornerRadius="5">
                            <ScrollViewer x:Name="PART_ContentHost" 
                                        Margin="{TemplateBinding Padding}"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsFocused" Value="True">
                                <Setter Property="BorderBrush" Value="#D393FF"/>
                                <Setter Property="Background" Value="#4A4A4A"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <!-- 🆕 Style pour les boutons de sauvegarde -->
        <Style x:Key="SaveButtonStyle" TargetType="Button">
            <Setter Property="Background" Value="#4CAF50"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Padding" Value="10,5"/>
            <Setter Property="FontWeight" Value="Bold"/>
            <Setter Property="FontSize" Value="10"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}" 
                                CornerRadius="3">
                            <ContentPresenter HorizontalAlignment="Center" 
                                            VerticalAlignment="Center"
                                            Margin="{TemplateBinding Padding}"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter Property="Background" Value="#66BB6A"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
    </Page.Resources>

    <ScrollViewer Margin="20" VerticalScrollBarVisibility="Auto">
        <StackPanel>

            <!-- Message de bienvenue -->
            <Border Style="{StaticResource WelcomeCardStyle}">
                <StackPanel>
                    <TextBlock Text="🎯 TABLEAU DE BORD"
                               Foreground="#D393FF"
                               FontSize="28"
                               FontWeight="Bold"
                               HorizontalAlignment="Center"
                               Margin="0,0,0,10"/>

                    <TextBlock Text="Bienvenue dans votre espace fitness ! Suivez vos progrès et atteignez vos objectifs."
                               Foreground="#B8B8B8"
                               FontSize="14"
                               TextAlignment="Center"
                               TextWrapping="Wrap"/>
                </StackPanel>
            </Border>

            <!-- Section profil et objectifs -->
            <Grid Margin="0,10">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="2*"/>
                    <ColumnDefinition Width="1*"/>
                </Grid.ColumnDefinitions>

                <!-- Profil utilisateur ÉDITABLE -->
                <Border Grid.Column="0" Style="{StaticResource ProfileCardStyle}">
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="Auto"/>
                            <ColumnDefinition Width="*"/>
                        </Grid.ColumnDefinitions>

                        <!-- Photo de profil -->
                        <Border Grid.Column="0"
                                Background="#AF66FF"
                                CornerRadius="50"
                                Width="100"
                                Height="100"
                                Margin="0,0,25,0">
                            <TextBlock Text="👤"
                                      FontSize="40"
                                      HorizontalAlignment="Center"
                                      VerticalAlignment="Center"/>
                        </Border>

                        <!-- Informations utilisateur ÉDITABLES -->
                        <StackPanel Grid.Column="1" VerticalAlignment="Top">
                            <!-- BINDING: Pseudo dynamique (non-éditable) -->
                            <TextBlock Text="{Binding Pseudo}"
                                      Foreground="White"
                                      FontSize="24"
                                      FontWeight="Bold"
                                      Margin="0,0,0,5"/>

                            <!-- BINDING: Date d'inscription formatée (non-éditable) -->
                            <TextBlock Text="{Binding DateInscription, StringFormat='INSCRIT LE {0:dd/MM/yyyy}'}"
                                      Foreground="#B8B8B8"
                                      FontSize="12"
                                      Margin="0,0,0,20"/>

                            <!-- Stats utilisateur ÉDITABLES - Layout amélioré -->
                            <Grid>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="1*"/>
                                    <ColumnDefinition Width="15"/>
                                    <ColumnDefinition Width="1*"/>
                                </Grid.ColumnDefinitions>
                                <Grid.RowDefinitions>
                                    <RowDefinition Height="Auto"/>
                                    <RowDefinition Height="10"/>
                                    <RowDefinition Height="Auto"/>
                                    <RowDefinition Height="15"/>
                                    <RowDefinition Height="Auto"/>
                                </Grid.RowDefinitions>

                                <!-- 🆕 POIDS ÉDITABLE -->
                                <StackPanel Grid.Column="0" Grid.Row="0">
                                    <TextBlock Text="POIDS :" Foreground="#D393FF" FontWeight="Bold" FontSize="11" Margin="0,0,0,5"/>
                                    <Border Background="#404040" CornerRadius="5" BorderBrush="#AF66FF" BorderThickness="1">
                                        <Grid Margin="8,5">
                                            <Grid.ColumnDefinitions>
                                                <ColumnDefinition Width="*"/>
                                                <ColumnDefinition Width="Auto"/>
                                            </Grid.ColumnDefinitions>
                                            <TextBox x:Name="PoidsTextBox" 
                                                    Grid.Column="0"
                                                    Text="{Binding Poids, UpdateSourceTrigger=PropertyChanged}"
                                                    Background="Transparent"
                                                    Foreground="White"
                                                    BorderThickness="0"
                                                    FontWeight="Bold"
                                                    VerticalContentAlignment="Center"/>
                                            <TextBlock Grid.Column="1" Text="KG" Foreground="#B8B8B8" 
                                                      VerticalAlignment="Center" FontSize="10" Margin="5,0,0,0"/>
                                        </Grid>
                                    </Border>
                                </StackPanel>

                                <!-- 🆕 TAILLE ÉDITABLE -->
                                <StackPanel Grid.Column="2" Grid.Row="0">
                                    <TextBlock Text="TAILLE :" Foreground="#D393FF" FontWeight="Bold" FontSize="11" Margin="0,0,0,5"/>
                                    <Border Background="#404040" CornerRadius="5" BorderBrush="#AF66FF" BorderThickness="1">
                                        <Grid Margin="8,5">
                                            <Grid.ColumnDefinitions>
                                                <ColumnDefinition Width="*"/>
                                                <ColumnDefinition Width="Auto"/>
                                            </Grid.ColumnDefinitions>
                                            <TextBox x:Name="TailleTextBox" 
                                                    Grid.Column="0"
                                                    Text="{Binding Taille, UpdateSourceTrigger=PropertyChanged}"
                                                    Background="Transparent"
                                                    Foreground="White"
                                                    BorderThickness="0"
                                                    FontWeight="Bold"
                                                    VerticalContentAlignment="Center"/>
                                            <TextBlock Grid.Column="1" Text="CM" Foreground="#B8B8B8" 
                                                      VerticalAlignment="Center" FontSize="10" Margin="5,0,0,0"/>
                                        </Grid>
                                    </Border>
                                </StackPanel>

                                <!-- IMC CALCULÉ (non-éditable) -->
                                <StackPanel Grid.Column="0" Grid.Row="2">
                                    <TextBlock Text="IMC :" Foreground="#D393FF" FontWeight="Bold" FontSize="11" Margin="0,0,0,5"/>
                                    <Border Background="#404040" CornerRadius="5" Padding="8,8">
                                        <TextBlock Text="{Binding IMCFormate}" Foreground="#4CAF50" FontWeight="Bold" HorizontalAlignment="Center"/>
                                    </Border>
                                </StackPanel>

                                <!-- 🆕 ÂGE ÉDITABLE -->
                                <StackPanel Grid.Column="2" Grid.Row="2">
                                    <TextBlock Text="ÂGE :" Foreground="#D393FF" FontWeight="Bold" FontSize="11" Margin="0,0,0,5"/>
                                    <Border Background="#404040" CornerRadius="5" BorderBrush="#AF66FF" BorderThickness="1">
                                        <Grid Margin="8,5">
                                            <Grid.ColumnDefinitions>
                                                <ColumnDefinition Width="*"/>
                                                <ColumnDefinition Width="Auto"/>
                                            </Grid.ColumnDefinitions>
                                            <TextBox x:Name="AgeTextBox" 
                                                    Grid.Column="0"
                                                    Text="{Binding Age, UpdateSourceTrigger=PropertyChanged}"
                                                    Background="Transparent"
                                                    Foreground="White"
                                                    BorderThickness="0"
                                                    FontWeight="Bold"
                                                    VerticalContentAlignment="Center"/>
                                            <TextBlock Grid.Column="1" Text="ANS" Foreground="#B8B8B8" 
                                                      VerticalAlignment="Center" FontSize="10" Margin="5,0,0,0"/>
                                        </Grid>
                                    </Border>
                                </StackPanel>

                                <!-- 🆕 BOUTON SAUVEGARDER PROFIL -->
                                <Button Grid.Column="0" Grid.Row="4" Grid.ColumnSpan="3"
                                       Content="💾 SAUVEGARDER PROFIL" 
                                       Style="{StaticResource SaveButtonStyle}"
                                       Click="SauvegarderProfil_Click"
                                       Height="35"/>
                            </Grid>
                        </StackPanel>
                    </Grid>
                </Border>

                <!-- Objectifs 2026 ÉDITABLES -->
                <Border Grid.Column="1" Style="{StaticResource ProfileCardStyle}" Background="#AF66FF">
                    <StackPanel>
                        <!-- BINDING: Année d'objectif dynamique -->
                        <TextBlock Text="{Binding DateObjectifFormatee, StringFormat='🎯 OBJECTIF {0}'}"
                                  Foreground="White"
                                  FontSize="18"
                                  FontWeight="Bold"
                                  HorizontalAlignment="Center"
                                  Margin="0,0,0,20"/>

                        <!-- 🆕 POIDS VISÉ ÉDITABLE -->
                        <StackPanel Margin="0,0,0,15">
                            <TextBlock Text="POIDS VISÉ :" Foreground="White" FontSize="12" FontWeight="Bold" Margin="0,0,0,5"/>
                            <Border Background="#2A2A2A" CornerRadius="5" BorderBrush="#FFFFFF" BorderThickness="1">
                                <Grid Margin="10,8">
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="*"/>
                                        <ColumnDefinition Width="Auto"/>
                                    </Grid.ColumnDefinitions>
                                    <TextBox x:Name="ObjectifPoidsTextBox"
                                            Grid.Column="0"
                                            Text="{Binding ObjectifPoids, UpdateSourceTrigger=PropertyChanged}"
                                            Background="Transparent"
                                            Foreground="#D393FF"
                                            BorderThickness="0"
                                            FontWeight="Bold"
                                            FontSize="14"
                                            HorizontalAlignment="Center"
                                            VerticalContentAlignment="Center"/>
                                    <TextBlock Grid.Column="1" Text="KG" Foreground="White" 
                                              VerticalAlignment="Center" FontWeight="Bold" Margin="8,0,0,0"/>
                                </Grid>
                            </Border>
                        </StackPanel>

                        <!-- IMC OBJECTIF CALCULÉ (non-éditable) -->
                        <StackPanel Margin="0,0,0,15">
                            <TextBlock Text="IMC VISÉ :" Foreground="White" FontSize="12" FontWeight="Bold" Margin="0,0,0,5"/>
                            <Border Background="#2A2A2A" CornerRadius="5" Padding="10,8">
                                <TextBlock Text="{Binding IMCObjectifFormate}" Foreground="#4CAF50" FontWeight="Bold" HorizontalAlignment="Center" FontSize="14"/>
                            </Border>
                        </StackPanel>

                        <!-- 🆕 DATE OBJECTIF ÉDITABLE -->
                        <StackPanel Margin="0,0,0,15">
                            <TextBlock Text="DATE OBJECTIF :" Foreground="White" FontSize="12" FontWeight="Bold" Margin="0,0,0,5"/>
                            <Border Background="#2A2A2A" CornerRadius="5" BorderBrush="#FFFFFF" BorderThickness="1" Padding="5">
                                <DatePicker x:Name="DateObjectifPicker"
                                           SelectedDate="{Binding DateObjectif, UpdateSourceTrigger=PropertyChanged}"
                                           Background="Transparent"
                                           Foreground="#D393FF"
                                           BorderThickness="0"
                                           FontWeight="Bold"
                                           HorizontalAlignment="Stretch"/>
                            </Border>
                        </StackPanel>

                        <!-- ANNÉES RESTANTES CALCULÉES (non-éditable) -->
                        <StackPanel Margin="0,0,0,20">
                            <TextBlock Text="TEMPS RESTANT :" Foreground="White" FontSize="12" FontWeight="Bold" Margin="0,0,0,5"/>
                            <Border Background="#2A2A2A" CornerRadius="5" Padding="10,8">
                                <TextBlock Text="{Binding AnneesRestantesFormate}" Foreground="#4CAF50" FontWeight="Bold" HorizontalAlignment="Center" FontSize="14"/>
                            </Border>
                        </StackPanel>

                        <!-- 🆕 BOUTON SAUVEGARDER OBJECTIFS -->
                        <Button Content="💾 SAUVEGARDER OBJECTIFS" 
                               Style="{StaticResource SaveButtonStyle}"
                               Click="SauvegarderObjectifs_Click"
                               Height="35"/>
                    </StackPanel>
                </Border>
            </Grid>

            <!-- Actions rapides -->
            <Border Style="{StaticResource StatCardStyle}" Margin="10,20">
                <StackPanel>
                    <TextBlock Text="⚡ ACTIONS RAPIDES"
                               Foreground="#D393FF"
                               FontSize="16"
                               FontWeight="Bold"
                               Margin="0,0,0,15"/>

                    <UniformGrid Rows="1" Columns="4">
                        <Button Content="🏃 NOUVELLE SÉANCE" 
                                Style="{StaticResource QuickActionButtonStyle}"
                                Click="NouvelleSeance_Click"/>
                        <Button Content="📊 VOIR PROGRÈS" 
                                Style="{StaticResource QuickActionButtonStyle}"
                                Click="VoirProgres_Click"/>
                        <Button Content="🎯 MES OBJECTIFS" 
                                Style="{StaticResource QuickActionButtonStyle}"
                                Click="MesObjectifs_Click"/>
                        <Button Content="📅 PLANNING" 
                                Style="{StaticResource QuickActionButtonStyle}"
                                Click="Planning_Click"/>
                    </UniformGrid>
                </StackPanel>
            </Border>

            <!-- Section graphiques (placeholder) -->
            <Border Style="{StaticResource StatCardStyle}" Margin="10,20">
                <StackPanel>
                    <TextBlock Text="📈 VOS PROGRÈS"
                               Foreground="#D393FF"
                               FontSize="16"
                               FontWeight="Bold"
                               Margin="0,0,0,15"/>

                    <TextBlock Text="Les graphiques de progression seront affichés ici..."
                               Foreground="#B8B8B8"
                               FontSize="14"
                               TextAlignment="Center"
                               Margin="0,20"/>
                </StackPanel>
            </Border>

        </StackPanel>
    </ScrollViewer>
</Page>