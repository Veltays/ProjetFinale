<Page x:Class="ProjetFinale.WPF.ImportPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      Title="ImportPage"
      Background="{DynamicResource App.Background}"
      Foreground="{DynamicResource App.Foreground}">

    <ScrollViewer VerticalScrollBarVisibility="Auto" HorizontalScrollBarVisibility="Disabled">
        <Grid Style="{StaticResource ImportMainContainerStyle}">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
            </Grid.RowDefinitions>

            <!-- En-tête -->
            <StackPanel Grid.Row="0" Style="{StaticResource ImportHeaderStyle}">
                <TextBlock Text="IMPORTS" Style="{StaticResource ImportMainTitleStyle}"/>
                <TextBlock Text="Importez vos données depuis différents formats" Style="{StaticResource ImportSubtitleStyle}"/>
            </StackPanel>

            <!-- Contenu principal -->
            <Grid Grid.Row="1">
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="*"/>
                </Grid.RowDefinitions>

                <!-- Titre section -->
                <TextBlock Grid.Row="0"
                           Text="FORMATS D'IMPORT DISPONIBLES"
                           Style="{StaticResource ImportSectionTitleStyle}"/>

                <!-- Cartes -->
                <UniformGrid Grid.Row="1" Columns="3" Style="{StaticResource ImportCardsGridStyle}">

                    <!-- 📊 CSV -->
                    <Border Style="{StaticResource ImportCardStyle}">
                        <StackPanel>
                            <Border Style="{StaticResource ImportIconGreenStyle}">
                                <Canvas Style="{StaticResource ImportIconCanvasStyle}">
                                    <Rectangle Style="{StaticResource ImportCSVFileRectStyle}"/>
                                    <Polygon Style="{StaticResource ImportCSVCornerStyle}"/>
                                    <Line Style="{StaticResource ImportCSVLine1Style}"/>
                                    <Line Style="{StaticResource ImportCSVLine2Style}"/>
                                    <Line Style="{StaticResource ImportCSVLine3Style}"/>
                                </Canvas>
                            </Border>
                            <TextBlock Text="CSV (.csv)" Style="{StaticResource ImportCardTitleStyle}"/>
                            <TextBlock Text="Importez vos données depuis des fichiers CSV compatibles avec Excel, Google Sheets et autres tableurs."
                                       Style="{StaticResource ImportCardDescriptionStyle}"/>
                            <TextBlock Text="TAILLE MAX: ~5 MB" Style="{StaticResource ImportCardSizeGreenStyle}"/>
                            <Button Content="IMPORTER CSV"
                                    Style="{StaticResource ImportButtonStyle}"
                                    Click="ImportCSV_Click"/>
                        </StackPanel>
                    </Border>

                    <!-- 📋 JSON -->
                    <Border Style="{StaticResource ImportCardStyle}">
                        <StackPanel>
                            <Border Style="{StaticResource ImportIconOrangeStyle}">
                                <Canvas Style="{StaticResource ImportIconCanvasStyle}">
                                    <Path Style="{StaticResource ImportJSONBrace1Style}"/>
                                    <Path Style="{StaticResource ImportJSONBrace2Style}"/>
                                </Canvas>
                            </Border>
                            <TextBlock Text="JSON (.json)" Style="{StaticResource ImportCardTitleStyle}"/>
                            <TextBlock Text="Format universel pour l'intégration avec d'autres applications ou pour les développeurs."
                                       Style="{StaticResource ImportCardDescriptionStyle}"/>
                            <TextBlock Text="TAILLE MAX: ~2 MB" Style="{StaticResource ImportCardSizeOrangeStyle}"/>
                            <Button Content="IMPORTER JSON"
                                    Style="{StaticResource ImportButtonStyle}"
                                    Click="ImportJSON_Click"/>
                        </StackPanel>
                    </Border>

                    <!-- 💾 Excel -->
                    <Border Style="{StaticResource ImportCardStyle}">
                        <StackPanel>
                            <Border Style="{StaticResource ImportIconBlueStyle}">
                                <Canvas Style="{StaticResource ImportIconCanvasStyle}">
                                    <Rectangle Style="{StaticResource ImportExcelMainRectStyle}"/>
                                    <Line Style="{StaticResource ImportExcelHLine1Style}"/>
                                    <Line Style="{StaticResource ImportExcelHLine2Style}"/>
                                    <Line Style="{StaticResource ImportExcelVLine1Style}"/>
                                    <Line Style="{StaticResource ImportExcelVLine2Style}"/>
                                </Canvas>
                            </Border>
                            <TextBlock Text="XML (.xml)" Style="{StaticResource ImportCardTitleStyle}"/>
                            <TextBlock Text="Importez directement depuis vos fichiers XML"
                                       Style="{StaticResource ImportCardDescriptionStyle}"/>
                            <TextBlock Text="TAILLE MAX: ~10 MB" Style="{StaticResource ImportCardSizeBlueStyle}"/>
                            <Button Content="Importer XML"
                                    Style="{StaticResource ImportButtonStyle}"
                                    Click="ImportXML_Click" />
                        </StackPanel>
                    </Border>
                </UniformGrid>

                <!-- 🕘 Historique -->
                <Border Grid.Row="2" Style="{StaticResource ImportHistoryCardStyle}">
                    <StackPanel>
                        <TextBlock Text="HISTORIQUE D'IMPORT" Style="{StaticResource ImportHistoryTitleStyle}"/>
                        <Grid x:Name="HistoryGrid">
                            <TextBlock Text="Aucun import effectué pour le moment"
                                       Style="{StaticResource ImportHistoryEmptyStyle}"/>
                        </Grid>
                    </StackPanel>
                </Border>
            </Grid>
        </Grid>
    </ScrollViewer>
</Page>
