<Page x:Class="ProjetFinale.Views.ExercicesPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      Title="Exercices"
      Background="{DynamicResource App.Background}"
      Foreground="{DynamicResource App.Foreground}">

    <Grid>
        <ScrollViewer VerticalScrollBarVisibility="Auto" HorizontalScrollBarVisibility="Disabled">
            <StackPanel Style="{StaticResource ExercicesMainContainerStyle}">

                <!-- Titre principal -->
                <TextBlock Text="EXERCICES" Style="{StaticResource ExercicesMainTitleStyle}"/>

                <!-- Section Ajouter un exercice -->
                <Border Style="{StaticResource ExercicesSectionContainerStyle}">
                    <StackPanel>

                        <!-- Header -->
                        <StackPanel Style="{StaticResource ExercicesSectionHeaderStyle}">
                            <TextBlock Text="✚" Style="{StaticResource ExercicesSectionIconStyle}"/>
                            <TextBlock Text="AJOUTER UN NOUVEL EXERCICE" Style="{StaticResource ExercicesSectionTitleStyle}"/>
                        </StackPanel>

                        <!-- Formulaire -->
                        <Grid Grid.IsSharedSizeScope="True">
                            <!-- 2 colonnes égales + 24px d’écart -->
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*" />
                                <ColumnDefinition Width="24" />
                                <ColumnDefinition Width="*" />
                            </Grid.ColumnDefinitions>

                            <!-- 4 lignes de champs + 16px d’écart -->
                            <Grid.RowDefinitions>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="16"/>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="16"/>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="16"/>
                                <RowDefinition Height="Auto"/>
                            </Grid.RowDefinitions>

                            <!-- Nom -->
                            <Grid Grid.Column="0" Grid.Row="0">
                                <Grid.RowDefinitions>
                                    <RowDefinition Height="Auto"/>
                                    <RowDefinition Height="Auto"/>
                                </Grid.RowDefinitions>
                                <TextBlock Text="NOM DE L'EXERCICE" Style="{StaticResource ExercicesFormLabelStyle}" />
                                <TextBox Name="ExerciseNameBox"
                                         Grid.Row="1" Margin="0,6,0,0"
                                         Style="{StaticResource ExercicesFormInputStyle}"
                                         HorizontalAlignment="Stretch"/>
                            </Grid>

                            <!-- Type -->
                            <Grid Grid.Column="2" Grid.Row="0">
                                <Grid.RowDefinitions>
                                    <RowDefinition Height="Auto"/>
                                    <RowDefinition Height="Auto"/>
                                </Grid.RowDefinitions>
                                <TextBlock Text="TYPE" Style="{StaticResource ExercicesFormLabelStyle}" />
                                <ComboBox Name="TypeComboBox"
                                          Grid.Row="1" Margin="0,6,0,0"
                                          Style="{StaticResource ExercicesFormComboBoxStyle}"
                                          HorizontalAlignment="Stretch"
                                          SelectionChanged="TypeComboBox_SelectionChanged">
                                    <ComboBoxItem Content="Répétitions" Tag="repetitions"/>
                                    <ComboBoxItem Content="Durée" Tag="duration"/>
                                </ComboBox>
                            </Grid>

                            <!-- Répétitions -->
                            <Grid Name="RepetitionsGroup" Grid.Column="0" Grid.Row="2" Visibility="Collapsed">
                                <Grid.RowDefinitions>
                                    <RowDefinition Height="Auto"/>
                                    <RowDefinition Height="Auto"/>
                                </Grid.RowDefinitions>
                                <TextBlock Text="RÉPÉTITIONS" Style="{StaticResource ExercicesFormLabelStyle}" />
                                <TextBox Name="RepetitionsBox"
                                         Grid.Row="1" Margin="0,6,0,0"
                                         Style="{StaticResource ExercicesFormInputStyle}"
                                         HorizontalAlignment="Stretch"/>
                            </Grid>

                            <!-- Durée -->
                            <Grid Name="DurationGroup" Grid.Column="2" Grid.Row="2" Visibility="Collapsed">
                                <Grid.RowDefinitions>
                                    <RowDefinition Height="Auto"/>
                                    <RowDefinition Height="Auto"/>
                                </Grid.RowDefinitions>
                                <TextBlock Text="DURÉE" Style="{StaticResource ExercicesFormLabelStyle}" />
                                <TextBox Name="DurationBox"
                                         Grid.Row="1" Margin="0,6,0,0"
                                         Style="{StaticResource ExercicesFormInputStyle}"
                                         HorizontalAlignment="Stretch"/>
                            </Grid>

                            <!-- Calories -->
                            <Grid Grid.Column="0" Grid.Row="4">
                                <Grid.RowDefinitions>
                                    <RowDefinition Height="Auto"/>
                                    <RowDefinition Height="Auto"/>
                                </Grid.RowDefinitions>
                                <TextBlock Text="CALORIES BRÛLÉES" Style="{StaticResource ExercicesFormLabelStyle}" />
                                <TextBox Name="CaloriesBox"
                                         Grid.Row="1" Margin="0,6,0,0"
                                         Style="{StaticResource ExercicesFormInputStyle}"
                                         HorizontalAlignment="Stretch"/>
                            </Grid>

                            <!-- Description (sur 2 colonnes) -->
                            <Grid Grid.Column="0" Grid.ColumnSpan="3" Grid.Row="6">
                                <Grid.RowDefinitions>
                                    <RowDefinition Height="Auto"/>
                                    <RowDefinition Height="Auto"/>
                                </Grid.RowDefinitions>
                                <TextBlock Text="DESCRIPTION" Style="{StaticResource ExercicesFormLabelStyle}" />
                                <TextBox Name="DescriptionBox"
                                         Grid.Row="1" Margin="0,6,0,0"
                                         Style="{StaticResource ExercicesFormTextAreaStyle}"
                                         HorizontalAlignment="Stretch"/>
                            </Grid>
                        </Grid>

                        <!-- Image (optionnel) -->
                        <Grid Margin="0,16,0,0">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="Auto"/>
                                <ColumnDefinition Width="12"/>
                                <ColumnDefinition Width="*"/>
                            </Grid.ColumnDefinitions>

                            <TextBlock Text="IMAGE (OPTIONNEL)"
                                       Style="{StaticResource ExercicesFormLabelStyle}"
                                       VerticalAlignment="Center"/>

                            <StackPanel Grid.Column="2" Orientation="Vertical">
                                <Grid>
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="Auto"/>
                                        <ColumnDefinition Width="12"/>
                                        <ColumnDefinition Width="*"/>
                                    </Grid.ColumnDefinitions>

                                    <Button x:Name="BtnPickImage"
                                            Grid.Column="0"
                                            Content="AJOUTER UNE IMAGE"
                                            Style="{StaticResource ExercicesGreenButtonStyle}"
                                            Click="BtnPickImage_Click"/>
                                    <TextBlock x:Name="TxtImageName"
                                               Grid.Column="2"
                                               VerticalAlignment="Center"
                                               Text="Aucune image sélectionnée"
                                               Style="{StaticResource ExercicesFormLabelStyle}"/>
                                </Grid>

                                <Image x:Name="PreviewImage"
                                       Margin="0,8,0,0"
                                       Height="150"
                                       Stretch="UniformToFill"
                                       Visibility="Collapsed"
                                       SnapsToDevicePixels="True"/>
                            </StackPanel>
                        </Grid>

                        <!-- Bouton d'ajout aligné à droite -->
                        <Grid Margin="0,16,0,0">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*" />
                                <ColumnDefinition Width="Auto" />
                            </Grid.ColumnDefinitions>
                            <Button Name="AddButton"
                                    Grid.Column="1"
                                    Content="AJOUTER"
                                    Style="{StaticResource ExercicesGreenButtonStyle}"
                                    MinWidth="120"
                                    HorizontalAlignment="Right"
                                    Click="AddButton_Click"/>
                        </Grid>

                    </StackPanel>
                    <!-- ⚠️ cette fermeture manquait -->
                </Border>

                <!-- Section Liste des exercices -->
                <Border Style="{StaticResource ExercicesSectionContainerStyle}">
                    <StackPanel>
                        <StackPanel Style="{StaticResource ExercicesSectionHeaderStyle}">
                            <TextBlock Text="📋" Style="{StaticResource ExercicesSectionIconStyle}"/>
                            <TextBlock Text="MES EXERCICES" Style="{StaticResource ExercicesSectionTitleStyle}"/>
                        </StackPanel>

                        <!-- Barre de recherche -->
                        <Grid Style="{StaticResource ExercicesSearchContainerStyle}">
                            <TextBox Name="SearchBox"
                                     Style="{StaticResource ExercicesSearchBoxStyle}"
                                     Text="Rechercher un exercice..."
                                     GotFocus="SearchBox_GotFocus"
                                     LostFocus="SearchBox_LostFocus"
                                     TextChanged="SearchBox_TextChanged"/>
                        </Grid>

                        <!-- Liste (items créés côté code) -->
                        <StackPanel Name="ExercisesListPanel"/>
                        <!-- Aucun exercice -->
                        <TextBlock Name="NoExercisesMessage"
                                   Text="Aucun exercice créé pour le moment"
                                   Style="{StaticResource ExercicesNoItemsMessageStyle}"/>
                    </StackPanel>
                </Border>

            </StackPanel>
        </ScrollViewer>
    </Grid>
</Page>
