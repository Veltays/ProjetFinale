<Page x:Class="ProjetFinale.WPF.ExportsPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      Title="Exports"
      Background="#303030">

    <Page.Resources>
        <!-- Styles réutilisés -->
        <Style x:Key="ExportCard" TargetType="Border">
            <Setter Property="Background" Value="#2A2A2A"/>
            <Setter Property="CornerRadius" Value="12"/>
            <Setter Property="Padding" Value="25"/>
            <Setter Property="Margin" Value="0,0,10,0"/>
            <Setter Property="Width" Value="280"/>
            <Setter Property="Height" Value="320"/>
            <Setter Property="Effect">
                <Setter.Value>
                    <DropShadowEffect Color="Black" BlurRadius="8" ShadowDepth="3" Opacity="0.3"/>
                </Setter.Value>
            </Setter>
        </Style>

        <Style x:Key="ExportButton" TargetType="Button">
            <Setter Property="Background" Value="#AF66FF"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Height" Value="45"/>
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="FontWeight" Value="Bold"/>
            <Setter Property="Margin" Value="0,20,0,0"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}"
                                CornerRadius="8">
                            <ContentPresenter HorizontalAlignment="Center"
                                            VerticalAlignment="Center"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter Property="Background" Value="#D393FF"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <Style x:Key="BigButton" TargetType="Button">
            <Setter Property="Background" Value="#AF66FF"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Height" Value="50"/>
            <Setter Property="FontSize" Value="16"/>
            <Setter Property="FontWeight" Value="Bold"/>
            <Setter Property="Margin" Value="10"/>
            <Setter Property="MinWidth" Value="200"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}"
                                CornerRadius="10">
                            <ContentPresenter HorizontalAlignment="Center"
                                            VerticalAlignment="Center"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter Property="Background" Value="#D393FF"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <Style x:Key="SecondaryButton" TargetType="Button">
            <Setter Property="Background" Value="#4A90E2"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Height" Value="50"/>
            <Setter Property="FontSize" Value="16"/>
            <Setter Property="FontWeight" Value="Bold"/>
            <Setter Property="Margin" Value="10"/>
            <Setter Property="MinWidth" Value="200"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}"
                                CornerRadius="10">
                            <ContentPresenter HorizontalAlignment="Center"
                                            VerticalAlignment="Center"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter Property="Background" Value="#357ABD"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
    </Page.Resources>

    <ScrollViewer Margin="20" VerticalScrollBarVisibility="Auto">
        <StackPanel MaxWidth="1200">

            <!-- Titre -->
            <TextBlock Text="EXPORTS"
                       Foreground="White"
                       FontSize="32"
                       FontWeight="Bold"
                       Margin="0,0,0,30"/>

            <!-- Formats d'export disponibles -->
            <TextBlock Text="FORMATS D'EXPORT DISPONIBLES"
                       Foreground="#D393FF"
                       FontSize="18"
                       FontWeight="Bold"
                       Margin="0,0,0,30"/>

            <!-- Cartes des formats d'export -->
            <StackPanel Orientation="Horizontal" 
                        HorizontalAlignment="Center"
                        Margin="0,0,0,50">

                <!-- CSV Export -->
                <Border Style="{StaticResource ExportCard}">
                    <StackPanel>
                        <!-- Icône CSV -->
                        <Border Background="#10B981"
                                Width="60"
                                Height="60"
                                CornerRadius="8"
                                HorizontalAlignment="Left"
                                Margin="0,0,0,20">
                            <Grid>
                                <TextBlock Text="📊"
                                          FontSize="24"
                                          HorizontalAlignment="Center"
                                          VerticalAlignment="Center"/>
                            </Grid>
                        </Border>

                        <!-- Titre et description -->
                        <TextBlock Text="CSV (.csv)"
                                   Foreground="White"
                                   FontSize="20"
                                   FontWeight="Bold"
                                   Margin="0,0,0,10"/>

                        <TextBlock Text="Format de données séparées par des virgules. Compatible avec Excel, Google Sheets et la plupart des outils d'analyse."
                                   Foreground="#B8B8B8"
                                   FontSize="12"
                                   TextWrapping="Wrap"
                                   LineHeight="18"
                                   Margin="0,0,0,15"/>

                        <TextBlock Text="TAILLE: ~850 KB"
                                   Foreground="#10B981"
                                   FontSize="11"
                                   FontWeight="Bold"/>

                        <!-- Bouton export -->
                        <Button Content="EXPORTER EN CSV"
                                Style="{StaticResource ExportButton}"
                                Click="ExportCSV_Click"/>
                    </StackPanel>
                </Border>

                <!-- JSON Export -->
                <Border Style="{StaticResource ExportCard}">
                    <StackPanel>
                        <!-- Icône JSON -->
                        <Border Background="#F59E0B"
                                Width="60"
                                Height="60"
                                CornerRadius="8"
                                HorizontalAlignment="Left"
                                Margin="0,0,0,20">
                            <TextBlock Text="📋"
                                      FontSize="24"
                                      HorizontalAlignment="Center"
                                      VerticalAlignment="Center"/>
                        </Border>

                        <!-- Titre et description -->
                        <TextBlock Text="JSON (.json)"
                                   Foreground="White"
                                   FontSize="20"
                                   FontWeight="Bold"
                                   Margin="0,0,0,10"/>

                        <TextBlock Text="Format universel pour l'intégration avec d'autres applications ou pour les développeurs."
                                   Foreground="#B8B8B8"
                                   FontSize="12"
                                   TextWrapping="Wrap"
                                   LineHeight="18"
                                   Margin="0,0,0,15"/>

                        <TextBlock Text="TAILLE: ~1.8 MB"
                                   Foreground="#F59E0B"
                                   FontSize="11"
                                   FontWeight="Bold"/>

                        <!-- Bouton export -->
                        <Button Content="EXPORTER EN JSON"
                                Style="{StaticResource ExportButton}"
                                Click="ExportJSON_Click"/>
                    </StackPanel>
                </Border>

                <!-- SERIALIZE Export -->
                <Border Style="{StaticResource ExportCard}">
                    <StackPanel>
                        <!-- Icône SERIALIZE -->
                        <Border Background="#3B82F6"
                                Width="60"
                                Height="60"
                                CornerRadius="8"
                                HorizontalAlignment="Left"
                                Margin="0,0,0,20">
                            <Grid>
                                <TextBlock Text="💾"
                                          FontSize="24"
                                          HorizontalAlignment="Center"
                                          VerticalAlignment="Center"/>
                            </Grid>
                        </Border>

                        <!-- Titre et description -->
                        <TextBlock Text="SERIALIZE (.dat)"
                                   Foreground="White"
                                   FontSize="20"
                                   FontWeight="Bold"
                                   Margin="0,0,0,10"/>

                        <TextBlock Text="Format binaire optimisé pour la sauvegarde et restauration rapide de toutes vos données."
                                   Foreground="#B8B8B8"
                                   FontSize="12"
                                   TextWrapping="Wrap"
                                   LineHeight="18"
                                   Margin="0,0,0,15"/>

                        <TextBlock Text="TAILLE: ~900 KB"
                                   Foreground="#3B82F6"
                                   FontSize="11"
                                   FontWeight="Bold"/>

                        <!-- Bouton export -->
                        <Button Content="EXPORTER EN BINAIRE"
                                Style="{StaticResource ExportButton}"
                                Click="ExportSerialize_Click"/>
                    </StackPanel>
                </Border>

            </StackPanel>

            <!-- Section Export Complet -->
            <TextBlock Text="EXPORT COMPLET"
                       Foreground="#D393FF"
                       FontSize="18"
                       FontWeight="Bold"
                       Margin="0,20,0,20"/>

            <!-- Carte Export Tout -->
            <Border Background="#2A2A2A"
                    CornerRadius="12"
                    Padding="30"
                    MaxWidth="500"
                    HorizontalAlignment="Center">
                <Border.Effect>
                    <DropShadowEffect Color="Black" BlurRadius="8" ShadowDepth="3" Opacity="0.3"/>
                </Border.Effect>

                <StackPanel>
                    <TextBlock Text="EXPORTER TOUT"
                               Foreground="#D393FF"
                               FontSize="22"
                               FontWeight="Bold"
                               HorizontalAlignment="Center"
                               Margin="0,0,0,10"/>

                    <TextBlock Text="Téléchargez toutes vos données dans tous les formats disponibles en une seule fois"
                               Foreground="#B8B8B8"
                               FontSize="13"
                               TextAlignment="Center"
                               TextWrapping="Wrap"
                               Margin="0,0,0,25"/>

                    <!-- Boutons alignés -->
                    <StackPanel Orientation="Horizontal" 
                                HorizontalAlignment="Center">
                        <Button Content="EXPORTER TOUT (.zip)"
                                Style="{StaticResource BigButton}"
                                Click="ExportAll_Click"/>

                        <Button Content="PROGRAMMER EXPORT"
                                Style="{StaticResource SecondaryButton}"
                                Click="ScheduleExport_Click"/>
                    </StackPanel>
                </StackPanel>
            </Border>

        </StackPanel>
    </ScrollViewer>
</Page>