<Page x:Class="ProjetFinale.WPF.Pages.AgendaPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">

    <Grid Background="{StaticResource AgendaBackgroundGradientStyle}">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="250"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>

        <!-- SIDEBAR -->
        <Border Grid.Column="0" Style="{StaticResource AgendaSidebarStyle}">
            <StackPanel Style="{StaticResource AgendaSidebarContentStyle}">
                <TextBlock Text="📅 AGENDA" Style="{StaticResource AgendaSidebarTitleStyle}"/>

                <!-- Navigation semaine -->
                <Border Style="{StaticResource AgendaSidebarSectionStyle}">
                    <StackPanel>
                        <TextBlock Text="Navigation" Style="{StaticResource AgendaSectionHeaderStyle}"/>

                        <StackPanel Style="{StaticResource AgendaNavigationButtonsStyle}">
                            <Button x:Name="PreviousWeekButton" 
                                   Content="◀" 
                                   Style="{StaticResource AgendaNavigationButtonStyle}"
                                   Click="PreviousWeek_Click"/>

                            <Button x:Name="NextWeekButton" 
                                   Content="▶" 
                                   Style="{StaticResource AgendaNavigationButtonStyle}"
                                   Click="NextWeek_Click"/>
                        </StackPanel>

                        <TextBlock x:Name="CurrentWeekLabel" 
                                  Text="16-22 Juin 2025" 
                                  Style="{StaticResource AgendaCurrentWeekLabelStyle}"/>
                    </StackPanel>
                </Border>

                <!-- Actions rapides -->
                <Border Style="{StaticResource AgendaSidebarSectionStyle}">
                    <StackPanel>
                        <TextBlock Text="Actions" Style="{StaticResource AgendaSectionHeaderStyle}"/>

                        <Button x:Name="CreateEventButton" 
                               Content="➕ Nouvel Événement" 
                               Style="{StaticResource AgendaCreateEventButtonStyle}"
                               Click="CreateEvent_Click"/>

                        <Button x:Name="TodayButton" 
                               Content="📍 Aujourd'hui" 
                               Style="{StaticResource AgendaTodayButtonStyle}"
                               Click="GoToToday_Click"/>

                        <Button x:Name="ExportIcsButton" 
                               Content="📥 Exporter ICS" 
                               Style="{StaticResource AgendaExportButtonStyle}"
                               Click="ExportIcs_Click"/>
                    </StackPanel>
                </Border>

                <!-- Statistiques de la semaine -->
                <Border Style="{StaticResource AgendaSidebarSectionStyle}">
                    <StackPanel>
                        <TextBlock Text="Cette semaine" Style="{StaticResource AgendaSectionHeaderStyle}"/>

                        <StackPanel Style="{StaticResource AgendaStatsRowStyle}">
                            <TextBlock Text="Événements :" Style="{StaticResource AgendaStatsLabelStyle}"/>
                            <TextBlock x:Name="EventCountLabel" Text="0" Style="{StaticResource AgendaStatsValueStyle}"/>
                        </StackPanel>

                        <StackPanel Style="{StaticResource AgendaStatsRowStyle}">
                            <TextBlock Text="Heures planifiées :" Style="{StaticResource AgendaStatsLabelStyle}"/>
                            <TextBlock x:Name="PlannedHoursLabel" Text="0h" Style="{StaticResource AgendaStatsValueStyle}"/>
                        </StackPanel>
                    </StackPanel>
                </Border>
            </StackPanel>
        </Border>

        <!-- CONTENU PRINCIPAL -->
        <Grid Grid.Column="1" Style="{StaticResource AgendaMainContentStyle}">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
            </Grid.RowDefinitions>

            <!-- Header avec titre de la semaine -->
            <Border Grid.Row="0" Style="{StaticResource AgendaWeekHeaderStyle}">
                <TextBlock x:Name="WeekTitleLabel" 
                          Text="Semaine du 16 au 22 Juin 2025" 
                          Style="{StaticResource AgendaWeekTitleStyle}"/>
            </Border>

            <!-- Vue calendrier -->
            <ScrollViewer Grid.Row="1" VerticalScrollBarVisibility="Auto" HorizontalScrollBarVisibility="Hidden">
                <Grid x:Name="CalendarGrid">
                    <Grid.RowDefinitions>
                        <!-- Header avec jours de la semaine -->
                        <RowDefinition Height="50"/>
                        <!-- Grille horaires -->
                        <RowDefinition Height="*"/>
                    </Grid.RowDefinitions>

                    <!-- Header jours de la semaine -->
                    <Grid Grid.Row="0" Style="{StaticResource AgendaDaysHeaderGridStyle}">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="80"/>
                            <!-- Colonne heures -->
                            <ColumnDefinition Width="*"/>
                            <!-- Lundi -->
                            <ColumnDefinition Width="*"/>
                            <!-- Mardi -->
                            <ColumnDefinition Width="*"/>
                            <!-- Mercredi -->
                            <ColumnDefinition Width="*"/>
                            <!-- Jeudi -->
                            <ColumnDefinition Width="*"/>
                            <!-- Vendredi -->
                            <ColumnDefinition Width="*"/>
                            <!-- Samedi -->
                            <ColumnDefinition Width="*"/>
                            <!-- Dimanche -->
                        </Grid.ColumnDefinitions>

                        <!-- Empty corner -->
                        <Border Grid.Column="0" Style="{StaticResource AgendaCornerCellStyle}"/>

                        <!-- Jours de la semaine -->
                        <Border Grid.Column="1" Style="{StaticResource AgendaDayHeaderCellStyle}">
                            <StackPanel VerticalAlignment="Center">
                                <TextBlock Text="LUNDI" Style="{StaticResource AgendaDayNameStyle}"/>
                                <TextBlock x:Name="MondayDate" Text="16" Style="{StaticResource AgendaDayDateStyle}"/>
                            </StackPanel>
                        </Border>

                        <Border Grid.Column="2" Style="{StaticResource AgendaDayHeaderCellStyle}">
                            <StackPanel VerticalAlignment="Center">
                                <TextBlock Text="MARDI" Style="{StaticResource AgendaDayNameStyle}"/>
                                <TextBlock x:Name="TuesdayDate" Text="17" Style="{StaticResource AgendaDayDateStyle}"/>
                            </StackPanel>
                        </Border>

                        <Border Grid.Column="3" Style="{StaticResource AgendaDayHeaderCellStyle}">
                            <StackPanel VerticalAlignment="Center">
                                <TextBlock Text="MERCREDI" Style="{StaticResource AgendaDayNameStyle}"/>
                                <TextBlock x:Name="WednesdayDate" Text="18" Style="{StaticResource AgendaDayDateStyle}"/>
                            </StackPanel>
                        </Border>

                        <Border Grid.Column="4" Style="{StaticResource AgendaDayHeaderCellStyle}">
                            <StackPanel VerticalAlignment="Center">
                                <TextBlock Text="JEUDI" Style="{StaticResource AgendaDayNameStyle}"/>
                                <TextBlock x:Name="ThursdayDate" Text="19" Style="{StaticResource AgendaDayDateStyle}"/>
                            </StackPanel>
                        </Border>

                        <Border Grid.Column="5" Style="{StaticResource AgendaDayHeaderCellStyle}">
                            <StackPanel VerticalAlignment="Center">
                                <TextBlock Text="VENDREDI" Style="{StaticResource AgendaDayNameStyle}"/>
                                <TextBlock x:Name="FridayDate" Text="20" Style="{StaticResource AgendaDayDateStyle}"/>
                            </StackPanel>
                        </Border>

                        <Border Grid.Column="6" Style="{StaticResource AgendaDayHeaderCellStyle}">
                            <StackPanel VerticalAlignment="Center">
                                <TextBlock Text="SAMEDI" Style="{StaticResource AgendaDayNameStyle}"/>
                                <TextBlock x:Name="SaturdayDate" Text="21" Style="{StaticResource AgendaDayDateStyle}"/>
                            </StackPanel>
                        </Border>

                        <Border Grid.Column="7" Style="{StaticResource AgendaLastDayHeaderCellStyle}">
                            <StackPanel VerticalAlignment="Center">
                                <TextBlock Text="DIMANCHE" Style="{StaticResource AgendaDayNameStyle}"/>
                                <TextBlock x:Name="SundayDate" Text="22" Style="{StaticResource AgendaDayDateStyle}"/>
                            </StackPanel>
                        </Border>
                    </Grid>

                    <!-- Grille des créneaux horaires -->
                    <Grid x:Name="TimeGrid" Grid.Row="1">
                        <!-- Les lignes et colonnes seront générées dynamiquement en code-behind -->
                    </Grid>
                </Grid>
            </ScrollViewer>
        </Grid>
    </Grid>
</Page>