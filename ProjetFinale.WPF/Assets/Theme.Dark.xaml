<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">

    <!-- Palette sombre -->
    <SolidColorBrush x:Key="App.Background" Color="#1A1A1A"/>
    <SolidColorBrush x:Key="App.Foreground" Color="#FFFFFFFF"/>

    <SolidColorBrush x:Key="Card.Background" Color="#202020"/>
    <SolidColorBrush x:Key="Card.Border" Color="#2C2C2C"/>

    <SolidColorBrush x:Key="Input.Background" Color="#2A2A2A"/>
    <SolidColorBrush x:Key="Input.Foreground" Color="#FFFFFF"/>
    <SolidColorBrush x:Key="Input.Border" Color="#3A3A3A"/>

    <SolidColorBrush x:Key="Divider" Color="#303030"/>

    <!-- Accent (tu peux adapter selon ThemeCouleur) -->
    <SolidColorBrush x:Key="Accent.Primary" Color="#8B5CF6"/>
    <SolidColorBrush x:Key="Accent.PrimaryHover" Color="#A78BFA"/>

</ResourceDictionary>