<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">

    <!-- Base -->
    <SolidColorBrush x:Key="App.Background" Color="#FFFFFF"/>
    <SolidColorBrush x:Key="App.Foreground" Color="#111111"/>

    <!-- Surfaces -->
    <SolidColorBrush x:Key="Surface.Card"    Color="#F5F5F7"/>
    <SolidColorBrush x:Key="Surface.CardAlt" Color="#FFFFFF"/>
    <SolidColorBrush x:Key="Surface.Border"  Color="#E5E5EA"/>

    <!-- Contrôles -->
    <SolidColorBrush x:Key="Control.Background" Color="#FFFFFF"/>
    <SolidColorBrush x:Key="Control.Foreground" Color="#111111"/>
    <SolidColorBrush x:Key="Control.Border"     Color="#B28CFF"/>

    <!-- Texte -->
    <SolidColorBrush x:Key="Text.Primary" Color="#111111"/>
    <SolidColorBrush x:Key="Text.Muted"   Color="#555555"/>

    <!-- Accent -->
    <SolidColorBrush x:Key="Accent.Primary"      Color="#7C3AED"/>
    <SolidColorBrush x:Key="Accent.PrimaryLight" Color="#8B5CF6"/>

    <!-- Sémantique -->
    <SolidColorBrush x:Key="Semantic.Success" Color="#2E7D32"/>
    <SolidColorBrush x:Key="Semantic.Danger"  Color="#C62828"/>

    <SolidColorBrush x:Key="ExercicesSectionBackground"
                 Color="#E5E5EA"/>

    
</ResourceDictionary>