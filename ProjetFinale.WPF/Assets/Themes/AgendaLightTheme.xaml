<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">

    <!-- Couleurs principales pour le thème clair -->
    <SolidColorBrush x:Key="Agenda.Brush.Background" Color="#FFFFFF"/>
    <SolidColorBrush x:Key="Agenda.Brush.Sidebar" Color="#F2F2F2"/>
    <SolidColorBrush x:Key="Agenda.Brush.TextPrimary" Color="#111111"/>
    <SolidColorBrush x:Key="Agenda.Brush.TextMuted" Color="#555555"/>
    <SolidColorBrush x:Key="Agenda.Brush.Section" Color="#E5E5EA"/>
    <SolidColorBrush x:Key="Agenda.Brush.Accent" Color="#8B5CF6"/>

    <!-- Dégradé de fond clair -->
    <LinearGradientBrush x:Key="Agenda.Brush.BackgroundGradient" StartPoint="0,0" EndPoint="1,1">
        <GradientStop Color="#7C3AED" Offset="0.0"/>
        <GradientStop Color="#8B5CF6" Offset="1.0"/>
    </LinearGradientBrush>
</ResourceDictionary>