<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">

    <!-- Couleurs principales pour le thème sombre -->
    <SolidColorBrush x:Key="Agenda.Brush.Background" Color="#1A1A1A"/>
    <SolidColorBrush x:Key="Agenda.Brush.Sidebar" Color="#2A2A2A"/>
    <SolidColorBrush x:Key="Agenda.Brush.TextPrimary" Color="#FFFFFF"/>
    <SolidColorBrush x:Key="Agenda.Brush.TextMuted" Color="#B8B8B8"/>
    <SolidColorBrush x:Key="Agenda.Brush.Section" Color="#3A3A3A"/>
    <SolidColorBrush x:Key="Agenda.Brush.Accent" Color="#AF66FF"/>

    <!-- Dégradé de fond sombre -->
    <LinearGradientBrush x:Key="Agenda.Brush.BackgroundGradient" StartPoint="0,0" EndPoint="1,1">
        <GradientStop Color="#AF66FF" Offset="0.0"/>
        <GradientStop Color="#8B5CF6" Offset="1.0"/>
    </LinearGradientBrush>
</ResourceDictionary>