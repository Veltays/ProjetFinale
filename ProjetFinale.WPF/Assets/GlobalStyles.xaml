    </Style>

    <!-- Style pour les titres de page avec gradient -->
    <Style x:Key="PageTitleStyle" TargetType="TextBlock">
        <Setter Property="FontFamily" Value="Kameron"/>
        <Setter Property="FontSize" Value="42"/>
        <Setter Property="FontWeight" Value="Bold"/>
        <Setter Property="Margin" Value="0,0,0,30"/>
        <Setter Property="HorizontalAlignment" Value="Left"/>
        <Setter Property="Foreground">
            <Setter.Value>
                <LinearGradientBrush StartPoint="0,0" EndPoint="1,0">
                    <GradientStop Color="#AF66FF" Offset="0"/>
                    <GradientStop Color="#D393FF" Offset="1"/>
                </LinearGradientBrush>
            </Setter.Value>
        </Setter>
    </Style>

    <!-- Style pour les sections avec ombre -->
    <Style x:Key="SectionCardStyle" TargetType="Border">
        <Setter Property="Background" Value="#2A2A2A"/>
        <Setter Property="CornerRadius" Value="15"/>
        <Setter Property="Padding" Value="30"/>
        <Setter Property="Margin" Value="0,0,0,30"/>
        <Setter Property="Effect">
            <Setter.Value>
                <DropShadowEffect Color="Black" BlurRadius="15" ShadowDepth="5" Opacity="0.5"/>
            </Setter.Value>
        </Setter>
    </Style>

    <!-- Style pour les sous-titres de section -->
    <Style x:Key="SectionTitleStyle" TargetType="TextBlock">
        <Setter Property="Foreground" Value="#D393FF"/>
        <Setter Property="FontFamily" Value="Kameron"/>
        <Setter Property="FontSize" Value="20"/>
        <Setter Property="FontWeight" Value="Bold"/>
        <Setter Property="Margin" Value="0,0,0,25"/>
    </Style>

    <!-- Style pour les titres de liste -->
    <Style x:Key="ListTitleStyle" TargetType="TextBlock">
        <Setter Property="Foreground" Value="#D393FF"/>
        <Setter Property="FontFamily" Value="Kameron"/>
        <Setter Property="FontSize" Value="24"/>
        <Setter Property="FontWeight" Value="Bold"/>
        <Setter Property="Margin" Value="0,0,0,25"/>
    </Style>

    <!-- Style pour message d'état vide -->
    <Style x:Key="EmptyStateStyle" TargetType="Border">
        <Setter Property="Background" Value="#2A2A2A"/>
        <Setter Property="CornerRadius" Value="15"/>
        <Setter Property="Padding" Value="40"/>
        <Setter Property="HorizontalAlignment" Value="Center"/>
        <Setter Property="Margin" Value="0,20"/>
        <Setter Property="Effect">
            <Setter.Value>
                <DropShadowEffect Color="Black" BlurRadius="10" ShadowDepth="3" Opacity="0.3"/>
            </Setter.Value>
        </Setter>
    </Style>

    
    
