    <!-- DataTemplate pour les tâches - DESIGN ÉLÉGANT -->
    <DataTemplate x:Key="TacheItemTemplate">
        <Border Background="#2A2A2A"
                CornerRadius="12"
                Padding="20"
                Margin="0,0,0,15">
            <Border.Effect>
                <DropShadowEffect Color="Black" BlurRadius="10" ShadowDepth="3" Opacity="0.4"/>
            </Border.Effect>

            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>

                <!-- Checkbox personnalisée -->
                <CheckBox Grid.Column="0"
                         IsChecked="{Binding EstTerminee, Mode=TwoWay}"
                         Width="28"
                         Height="28"
                         Margin="0,0,15,0"
                         VerticalAlignment="Center">
                    <CheckBox.Style>
                        <Style TargetType="CheckBox">
                            <Setter Property="Template">
                                <Setter.Value>
                                    <ControlTemplate TargetType="CheckBox">
                                        <Border x:Name="CheckBorder"
                                                Background="#4A4A4A"
                                                BorderBrush="#AF66FF"
                                                BorderThickness="2"
                                                CornerRadius="6"
                                                Width="28"
                                                Height="28">
                                            <TextBlock x:Name="CheckMark"
                                                      Text="✓"
                                                      Foreground="#AF66FF"
                                                      FontSize="18"
                                                      FontWeight="Bold"
                                                      HorizontalAlignment="Center"
                                                      VerticalAlignment="Center"
                                                      Visibility="Collapsed"/>
                                        </Border>
                                        <ControlTemplate.Triggers>
                                            <Trigger Property="IsChecked" Value="True">
                                                <Setter TargetName="CheckMark" Property="Visibility" Value="Visible"/>
                                                <Setter TargetName="CheckBorder" Property="Background" Value="#AF66FF"/>
                                                <Setter TargetName="CheckMark" Property="Foreground" Value="White"/>
                                            </Trigger>
                                            <Trigger Property="IsMouseOver" Value="True">
                                                <Setter TargetName="CheckBorder" Property="BorderBrush" Value="#D393FF"/>
                                            </Trigger>
                                        </ControlTemplate.Triggers>
                                    </ControlTemplate>
                                </Setter.Value>
                            </Setter>
                        </Style>
                    </CheckBox.Style>
                </CheckBox>

                <!-- Description avec style conditionnel amélioré -->
                <TextBlock Grid.Column="1"
                          Text="{Binding Description}"
                          FontFamily="Kameron"
                          FontSize="16"
                          FontWeight="Medium"
                          VerticalAlignment="Center"
                          TextWrapping="Wrap"
                          Margin="0,0,10,0">
                    <TextBlock.Style>
                        <Style TargetType="TextBlock">
                            <Setter Property="Foreground" Value="White"/>
                            <Style.Triggers>
                                <DataTrigger Binding="{Binding EstTerminee}" Value="True">
                                    <Setter Property="Foreground" Value="#888888"/>
                                    <Setter Property="TextDecorations" Value="Strikethrough"/>
                                    <Setter Property="Opacity" Value="0.7"/>
                                </DataTrigger>
                            </Style.Triggers>
                        </Style>
                    </TextBlock.Style>
                </TextBlock>

                <!-- Bouton supprimer amélioré -->
                <Button Grid.Column="2"
                       Background="Transparent"
                       BorderThickness="0"
                       Width="32"
                       Height="32"
                       Cursor="Hand"
                       ToolTip="Supprimer cette tâche">
                    <Button.Template>
                        <ControlTemplate TargetType="Button">
                            <Border x:Name="DeleteBorder"
                                    Background="{TemplateBinding Background}"
                                    CornerRadius="16"
                                    Width="32"
                                    Height="32">
                                <TextBlock Text="🗑️" 
                                          FontSize="16"
                                          HorizontalAlignment="Center"
                                          VerticalAlignment="Center"/>
                            </Border>
                            <ControlTemplate.Triggers>
                                <Trigger Property="IsMouseOver" Value="True">
                                    <Setter TargetName="DeleteBorder" Property="Background" Value="#33FF4444"/>
                                </Trigger>
                                <Trigger Property="IsPressed" Value="True">
                                    <Setter TargetName="DeleteBorder" Property="Background" Value="#55FF4444"/>
                                </Trigger>
                            </ControlTemplate.Triggers>
                        </ControlTemplate>
                    </Button.Template>
                </Button>
            </Grid>
        </Border>
    </DataTemplate>

